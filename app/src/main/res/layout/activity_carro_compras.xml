<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".carroComprasActivity"
    android:paddingBottom="16dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="16dp"
    android:id="@+id/activity_compras">

<TextView
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="             PRODUCTOS A COMPRAR"
    android:textStyle="bold"
    android:textSize="20dp"
    android:layout_centerHorizontal="true"
    />

    <androidx.recyclerview.widget.RecyclerView

        android:layout_marginTop="20dp"
        android:layout_below="@+id/title"
        android:id="@+id/recyclerProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:id="@+id/titlepagar"
        android:layout_below="@+id/recyclerProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total a pagar:"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="150dp"
        android:textSize="20dp"
        android:id="@+id/total"
        android:layout_below="@+id/recyclerProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total"/>


    <Button
        android:id="@+id/btn1"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titlepagar"
        android:text="Comprar"
        android:textColor="?attr/colorPrimaryDark"
        style="?attr/materialButtonOutlinedStyle"/>


</RelativeLayout>